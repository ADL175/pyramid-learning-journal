{% extends "layout.jinja2" %}
{% block content %}
    <h1>CREATE YOUR NEW JOURNAL ENTRY</h1>
    {{ error }}
    <form method="POST">
      <ul>
        <li>
          <label for="title">Title: </label>
          <input type="text" name="title" value="{{ title }}"/>
        </li>
        <li>
          <label for="body">Write your new journal entry:</label>
          <textarea name="body" rows="8" cols="80">
            {{ body }}
          </textarea>
        </li>
        <li>
            <input type="submit" value="Add New Journal" />
        </li>
      </ul>
    </form>
{% endblock %}
